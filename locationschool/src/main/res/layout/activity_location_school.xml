<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/school_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
<RelativeLayout
    android:id="@+id/school_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:paddingBottom="1dp"
        android:id="@+id/layout_menu">
        <Spinner
            android:id="@+id/spinnerquyu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            style="@style/spinner_style"
            android:animationCache="true"
            android:drawSelectorOnTop="true"
            android:background="#000000"
            />
        <Spinner
            android:id="@+id/spinnerxingzhi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#000000"
            style="@style/textApptheme"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"/>
        <Spinner
            android:id="@+id/spinnerbanxueguimo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#000000"
            style="@style/textApptheme"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_location"
        android:layout_below="@id/layout_menu">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="已定位到海淀，您附近的幼儿园..."
            android:lines="1"
            style="@style/textApptheme"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_location">
        <include
            layout="@layout/layout_listview"
            ></include>
    </LinearLayout>
</RelativeLayout>
    <ListView
        android:id="@+id/school_left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>
</android.support.v4.widget.DrawerLayout>